/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "paths": {
      "@libs/*": ["./projects/*"],
      "@app/*": ["./src/app/*"],
      "@dist/*": [
        "./dist/*"
      ],
      "sn-checkbox": [
        "./dist/sn-checkbox"
      ],
      "sn-radio": [
        "./dist/sn-radio"
      ],
      "sn-select": [
        "./dist/sn-select"
      ],
      "sn-table": [
        "./dist/sn-table"
      ],
      "sn-textarea": [
        "./dist/sn-textarea"
      ],
      "sntest": [
        "./dist/sntest"
      ]
    },
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "references": [
    {
      "path": "./projects/sn-checkbox/tsconfig.lib.json"
    },
    {
      "path": "./projects/sn-checkbox/tsconfig.spec.json"
    },
    {
      "path": "./projects/sn-radio/tsconfig.lib.json"
    },
    {
      "path": "./projects/sn-radio/tsconfig.spec.json"
    },
    {
      "path": "./projects/sn-textarea/tsconfig.lib.json"
    },
    {
      "path": "./projects/sn-textarea/tsconfig.spec.json"
    },
    {
      "path": "./projects/sn-select/tsconfig.lib.json"
    },
    {
      "path": "./projects/sn-select/tsconfig.spec.json"
    },
    {
      "path": "./projects/sn-table/tsconfig.lib.json"
    },
    {
      "path": "./projects/sn-table/tsconfig.spec.json"
    }
  ]
}
